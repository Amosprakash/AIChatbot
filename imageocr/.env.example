# Application Settings
APP_HOST=0.0.0.0
APP_PORT=3000
DEBUG=False

# Paths (Windows example - adjust for your OS)
TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe
POPPLER_PATH=C:\Program Files\poppler-25.07.0\Library\bin

# Google Vision API (optional)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/credentials.json

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0
OPENAI_MAX_RETRIES=3

# PaddleOCR Model Paths (relative to project root)
PADDLE_DET_MODEL=models/en_PP-OCRv3_det_infer
PADDLE_REC_MODEL=models/en_PP-OCRv4_rec_infer
PADDLE_CLS_MODEL=models/ch_ppocr_mobile_v2.0_cls_infer

# Super Resolution Model
SUPER_RES_MODEL=FSRCNN_x4.pb

# OCR Settings
CONFIDENCE_THRESHOLD=0.75
USE_SUPER_RESOLUTION=True
USE_DESKEW=True

# Cache Settings
ENABLE_CACHE=True
CACHE_TYPE=file  # Options: file, redis, memory
CACHE_TTL=86400  # 24 hours in seconds

# Redis Configuration (if using Redis cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=log.txt
LOG_MAX_BYTES=10485760  # 10 MB
LOG_BACKUP_COUNT=5

# Processing Settings
VIDEO_FRAME_INTERVAL_SEC=1
PDF_BATCH_SIZE=5
EXCEL_CHUNK_SIZE=1000
KEYWORD_TOP_N=100

# Image Validation
BLUR_THRESHOLD=100.0
MIN_RESOLUTION_HEIGHT=500
LOW_CONTRAST_THRESHOLD=15.0

# CORS Settings (comma-separated origins, use * for all)
CORS_ORIGINS=*

# File Upload Settings
MAX_FILE_SIZE=52428800  # 50 MB in bytes
